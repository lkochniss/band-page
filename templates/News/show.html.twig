{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <h1 class="col">{{ entity.title }}</h1>
            <h6 class="col text-right text-muted">
                {% trans from "blog_post" %}posted at{% endtrans %} {{ entity.createdAt|date("d.m.Y") }}
            </h6>
        </div>
        <hr/>
        <div class="row">
            <div class="col">
                {{ entity.content| raw }}
            </div>
        </div>
    </div>
{% endblock %}
