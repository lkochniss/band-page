{% extends 'admin-base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row mb-3">
            <div class="col">
                <h1>{% trans from "messages" %}edit_user{% endtrans %}</h1>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>{% trans from "messages" %}username{% endtrans %}</label>
                <input type="text" class="form-control" value="{{ user.username }}" readonly/>
            </div>
            <div class="form-group col-md-6">
                <label>{% trans from "messages" %}email{% endtrans %}</label>
                <input type="text" class="form-control" value="{{ user.email }}" readonly/>
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-1">
                <label>{% trans from "messages" %}roles{% endtrans %}</label>
            </div>
            <div class="form-group col-md-10">
                {{ form_widget(form.roles) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-2">
                {{ form_row(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#edit_user_roles_0').addClass('mr-1');
            $('#edit_user_roles_1').addClass('mr-1 ml-1');
        });
    </script>
{% endblock %}
