{% extends 'admin-base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row mb-3">
            <div class="col">
                <h1>{% trans from "messages" %}reset_password{% endtrans %}</h1>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>{% trans from "messages" %}password{% endtrans %}</label>
                {{ form_widget(form.plainPassword.first) }}
            </div>
            <div class="form-group col-md-6">
                <label>{% trans from "messages" %}password_repeat{% endtrans %}</label>
                {{ form_widget(form.plainPassword.second) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-2">
                {{ form_row(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#password_reset_plainPassword_first').addClass('form-control');
            $('#password_reset_plainPassword_second').addClass('form-control');
        });
    </script>
{% endblock %}
