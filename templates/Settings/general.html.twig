{% extends 'admin-base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row mb-3">
            <div class="col">
                <h1>{% trans from "messages" %}general_settings{% endtrans %}</h1>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>{% trans from "messages" %}band_name{% endtrans %}</label>
                {{ form_widget(form.bandName) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>{% trans from "messages" %}favicon{% endtrans %}</label>
                {{ form_widget(form.favicon) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>{% trans from "messages" %}link_to_shop{% endtrans %}</label>
                {{ form_widget(form.linkToShop) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>{% trans from "messages" %}banner_image{% endtrans %}</label>
                {{ form_widget(form.bannerImage) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>{% trans from "messages" %}background_image{% endtrans %}</label>
                {{ form_widget(form.backgroundImage) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-2">
                {{ form_row(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
