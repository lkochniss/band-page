            {% if linkToShop %}
                <li class="nav-item">
                    <a class="nav-link text-light"
                       href="{{ linkToShop }}"
                       target="_blank">
                        {% trans from "messages" %}link_to_shop{% endtrans %}
                    </a>
                </li>
            {% endif %}
