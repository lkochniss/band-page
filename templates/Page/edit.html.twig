{% extends 'admin-base.html.twig' %}
{% block body %}
    <div class="container">
        {% if  app.request.get('_route') ends with '_edit' %}
            <div class="row mb-3">
                <div class="col">
                    <h1>{% trans from "messages" %}edit_page{% endtrans %}</h1>
                </div>
                <div class="col text-right">
                    <a href="{{ path('page_show', {'slug' : entity.slug }) }}">{% trans from "messages" %}show_page{% endtrans %}</a>
                </div>
            </div>
        {% else %}
            <div class="row mb-3">
                <div class="col">
                    <h1>{% trans from "messages" %}create_page{% endtrans %}</h1>
                </div>
            </div>
        {% endif %}
        {{ form_start(form) }}
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>{% trans from "messages" %}title{% endtrans %}</label>
                {{ form_widget(form.title) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                {{ form_widget(form.content) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-2">
                {{ form_row(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.ckeditor.com/4.8.0/standard/ckeditor.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            CKEDITOR.replace('page_content',{
                'entities': false
            });
        });
    </script>
{% endblock %}
