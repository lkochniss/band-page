{% extends 'admin-base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css"
          href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css">
{% endblock %}
{% block body %}
    {% if  app.request.get('_route') ends with '_edit' %}
        <div class="row">
            <div class="col text-right">
                <a href="{{ path('gig_show', {'slug' : entity.slug }) }}">{% trans from "gig" %}show{% endtrans %} </a>
            </div>
        </div>
    {% endif %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col">
            {{ form_row(form.title) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_widget(form.description) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_widget(form.price) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_widget(form.date) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_widget(form.location) }}
        </div>
    </div>
    <div class="row">
        <div class="col">
            {{ form_row(form.submit) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.ckeditor.com/4.8.0/standard/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            CKEDITOR.replace('gig_description');
            $('#gig_location').select2();
        });
    </script>
{% endblock %}
