{% extends 'admin-base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css"
          href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css">
{% endblock %}
{% block body %}
    <div class="container">
        {% if  app.request.get('_route') ends with '_edit' %}
            <div class="row mb-3">
                <div class="col">
                    <h1>{% trans from "gig" %}edit gig{% endtrans %}</h1>
                </div>
                <div class="col text-right">
                    <a href="{{ path('gig_show', {'slug' : entity.slug }) }}">{% trans from "gig" %}show gig{% endtrans %}</a>
                </div>
            </div>
        {% else %}
            <div class="row mb-3">
                <div class="col">
                    <h1>{% trans from "gig" %}create gig{% endtrans %}</h1>
                </div>
            </div>
        {% endif %}
        {{ form_start(form) }}
        <div class="form-row">
            <div class="form-group col-md-12">
                <label>{% trans from "gig" %}title{% endtrans %}</label>
                {{ form_widget(form.title) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                {{ form_widget(form.description) }}
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <label>{% trans from "gig" %}price in {% endtrans %}</label>
                {{ form_widget(form.price) }}
            </div>
            <div class="form-group col-md-4">
                <label>{% trans from "gig" %}date{% endtrans %}</label>
                {{ form_widget(form.date) }}
            </div>
            <div class="form-group col-md-6">
                <label>{% trans from "gig" %}location{% endtrans %}</label>
                {{ form_widget(form.location) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col text-right">
                {{ form_row(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.ckeditor.com/4.8.0/standard/ckeditor.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            CKEDITOR.replace('gig_description');
            $('#gig_location').select2();
        });
    </script>
{% endblock %}
