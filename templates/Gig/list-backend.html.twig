{% extends 'admin-base.html.twig' %}
 {% block stylesheets %}
     {{ parent() }}
     <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.16/css/jquery.dataTables.min.css">
 {% endblock %}
{% block body %}
    <div class="container">
        <table id="gig-list" class="table">
            <thead>
            <tr>
                <th scope="col">{% trans from 'gig' %}title{% endtrans %}</th>
                <th scope="col">{% trans from 'gig' %}createdAt at{% endtrans %}</th>
                <th scope="col">{% trans from 'gig' %}modified at{% endtrans %}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for gig in entities %}
                <tr>
                    <td scope="row">{{ gig.title }}</td>
                    <td scope="col"
                        data-order="{{ gig.createdAt|date('Y-m-d') }}">{{ gig.createdAt|date('d.m.Y H:i') }}</td>
                    <td scope="col"
                        data-order="{{ gig.createdAt|date('Y-m-d') }}">{{ gig.modifiedAt|date('d.m.Y H:i') }}</td>
                    <td scope="col">
                        <a class="float-right"
                           href="{{ path('gig_edit', {'id': gig.id}) }}">{% trans from 'gig' %}edit{% endtrans %}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#gig-list').DataTable({
                'order': [[3, 'desc']]
            });
        });
    </script>
{% endblock %}
