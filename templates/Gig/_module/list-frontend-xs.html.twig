<div class="d-block d-md-none">
    {% for gig in gigs %}
        <div class="card mb-3">
            <div class="card-header">
                <h5 class="card-title">{{ gig.title }}</h5>
            </div>
            <div class="card-body">
                <p class="card-text">
                    {% trans from "messages" %}when{% endtrans %}: {{ gig.createdAt|date('d.m.Y') }}<br/>
                    {% trans from "messages" %}doors_open{% endtrans %}: {{ gig.createdAt|date('H:i') }}<br/>
                    {% trans from "messages" %}price{% endtrans %}: {{ gig.price }}{{ default_currency|trans() }}<br/>
                    {% trans from "messages" %}location{% endtrans %}: {{ gig.location.name }}, {{ gig.location.city }}<br/>
                </p>

            </div>
            <div class="card-footer text-right">
                <a class="btn btn-light btn-outline-dark"
                   href="{{ path('gig_show', {'slug': gig.slug}) }}"> {% trans from "messages" %}more_information{% endtrans %}
                </a>
            </div>
        </div>
    {% endfor %}
</div>
