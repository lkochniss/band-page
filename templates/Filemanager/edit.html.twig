{% extends 'admin-base.html.twig' %}
{% block body %}
    <div class="container">
        <h1>{% trans from "messages" %}create_directory{% endtrans %}</h1>
        {{ form_start(form) }}
        <div class="form-row">
            <div class="form-group col-md-2 offset-5">
                <label>{% trans from "messages" %}name{% endtrans %}</label>
                {{ form_widget(form.name) }}
            </div>
        </div>
        <div class="form-row">
            <div class="col-md-2 offset-5">
                {{ form_row(form.submit) }}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
